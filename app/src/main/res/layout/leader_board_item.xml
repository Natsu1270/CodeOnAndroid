<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/lead_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/people"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/lead_name"
            android:textStyle="bold"
            android:text="The Coder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/lead_avatar"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txtV_xp"
            android:textColor="#000000"
            android:text="XP :"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/lead_avatar"
            android:layout_below="@+id/lead_name"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/txtV_xp"
            android:layout_below="@+id/lead_name"
            android:id="@+id/exp_count"
            android:text="0"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>