<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Register"
    android:background="@drawable/codage"
    >


    <TextView
        android:id="@+id/reg_nav"
        android:text="Register"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6F000205"
        />
    <ImageButton
        android:onClick="back_click"
        android:id="@+id/btn_back2"
        android:layout_marginHorizontal="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backarrow"
        android:background="@android:color/transparent"
        />
    <TextView
        android:id="@+id/txtV_name"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@+id/reg_nav"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="#ffff"
        />

    <EditText
        android:layout_marginHorizontal="20dp"
        android:id="@+id/txt_name"
        android:layout_below="@+id/txtV_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffff"
        android:textColor="#ffff"
        />
    <TextView
        android:layout_below="@+id/txt_name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtV_rusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Username"
        android:textColor="#ffff"
        />
    <EditText
        android:id="@+id/reguser"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/txtV_rusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffff"
        android:textColor="#ffff"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/reguser"
        android:id="@+id/txtV_rpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Password"
        android:textColor="#ffff"
        />

    <EditText
        android:id="@+id/regpass"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/txtV_rpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:inputType="textPassword"
        android:backgroundTint="#ffff"
        />
    <Button
        android:textAllCaps="false"
        android:id="@+id/reg_btn"
        android:text="Register"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/regpass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#02BCD4"
        android:textColor="#ffff"
        android:onClick="register_btnClick"
        />
    <TextView
        android:id="@+id/or_with"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_btn"
        android:text="OR REGISTER WITH"
        android:textColor="#ffff"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:onClick="continue_gmail"
        android:layout_marginTop="30dp"
        android:background="#ffff"
        android:paddingLeft="20dp"
        android:id="@+id/reg_gmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/or_with"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/google"
        android:text="Continue with google account"
        />
